{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@appConstants": ["app/core/constants"],
      "@appComponents": ["app/core/components"],
      "@appInterceptors": ["app/core/interceptors"],
      "@appServices": ["app/core/services"],
      "@appShared": ["app/core/shared"],
      "@appSharedModule": ["app/core/shared.module.ts"],
      "@appApi": ["app/core/api"],
      "@appApi/*": ["app/core/api/*"],
      "@appLayouts/*": ["app/layout/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },

  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
